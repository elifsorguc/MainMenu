<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentSignUp">


    <Button
        android:id="@+id/signInPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:padding="20dp"
        android:text="SIGN IN"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:rippleColor="@color/teal_700"
        app:strokeColor="@color/teal_700"
        android:backgroundTint="@color/material_dynamic_tertiary70"/>

    <CheckBox
        android:id="@+id/adminCheck"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        app:layout_constraintEnd_toStartOf="@+id/admintxt"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />

    <TextView
        android:id="@+id/admintxt"
        android:layout_width="124dp"
        android:layout_height="39dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="92dp"
        android:padding="9dp"
        android:text="I'm an admin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        app:layout_constraintVertical_bias="0.111" />

    <Button
        android:id="@+id/signupbtn"
        android:layout_width="110dp"
        android:layout_height="72dp"
        android:layout_margin="1dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="14dp"
        android:backgroundTint="@color/material_dynamic_tertiary70"
        android:gravity="center"
        android:padding="20dp"
        android:text="SIGN UP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/admintxt"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        app:rippleColor="@color/teal_700"
        app:strokeColor="@color/teal_700" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="390dp"
        android:layout_height="419dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="30dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/adminCheck"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/signUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Sign Up"
            android:textColor="#F04A5536"
            android:textSize="35dp" />

        <EditText
            android:id="@+id/name_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="#D7C9E19E"
            android:backgroundTint="@color/material_dynamic_tertiary70"
            android:drawableLeft="@drawable/ic_baseline_person_outline_24"
            android:drawablePadding="15dp"
            android:drawableTint="@color/white"
            android:hint="Name"
            android:padding="20dp" />

        <EditText
            android:id="@+id/email_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#D7C9E19E"
            android:backgroundTint="@color/material_dynamic_tertiary70"
            android:drawableLeft="@drawable/ic_baseline_mail_outline_24"
            android:drawablePadding="15dp"
            android:drawableTint="@color/white"
            android:hint="Email"
            android:padding="20dp" />

        <EditText
            android:id="@+id/username_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#D7C9E19E"
            android:backgroundTint="@color/material_dynamic_tertiary70"
            android:drawableLeft="@drawable/ic_baseline_verified_user_24"
            android:drawablePadding="15dp"
            android:drawableTint="@color/white"
            android:hint="Username"
            android:padding="20dp" />

        <EditText
            android:id="@+id/bilkentID_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#D7C9E19E"
            android:backgroundTint="@color/material_dynamic_tertiary70"
            android:drawableLeft="@drawable/ic_baseline_widgets_24"
            android:drawablePadding="15dp"
            android:drawableTint="@color/white"
            android:hint="Bilkent ID"
            android:padding="20dp" />

        <EditText
            android:id="@+id/password_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#D7C9E19E"
            android:backgroundTint="@color/material_dynamic_tertiary70"
            android:drawableLeft="@drawable/ic_baseline_lock_open_24"
            android:drawablePadding="15dp"
            android:drawableTint="@color/white"
            android:hint="Password"
            android:padding="20dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="157dp"
        android:layout_height="37dp"
        android:layout_marginStart="67dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="45dp"
        android:text="Already have an account"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/signInPage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/admintxt" />

</androidx.constraintlayout.widget.ConstraintLayout>