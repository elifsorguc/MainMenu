<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentSocialLibrary">
    <LinearLayout
        android:layout_width="234dp"
        android:layout_height="179dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="129dp"
        android:layout_marginEnd="89dp"
        android:layout_marginBottom="295dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/numberOfPeopleInLibraryText"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:text="Number Of People In Library // Database" />

        <Button
            android:id="@+id/buttonFriendsInLibrary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FRIENDS IN LIBRARY"
            android:backgroundTint="@color/material_dynamic_tertiary70"/>

        <Button
            android:id="@+id/buttonInformFriends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INFORM FRIENDS"
            android:backgroundTint="@color/material_dynamic_tertiary70"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>